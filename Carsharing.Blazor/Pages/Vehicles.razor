@page "/vehicles"
@inject IVehicleService VehicleService

<PageTitle>Fahrzeuge - Carsharing</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2>üöó Fahrzeuge</h2>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Fehler:</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    <!-- Filter-Bereich -->
    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0">üîç Filter</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-2">
                    <label class="form-label">Standort</label>
                    <InputText class="form-control" placeholder="Standort suchen..." @bind-Value="filterLocation" @bind-Value:after="ApplyFilters" />
                </div>
                <div class="col-md-3 mb-2">
                    <label class="form-label">Modell</label>
                    <InputText class="form-control" placeholder="Modell suchen..." @bind-Value="filterModel" @bind-Value:after="ApplyFilters" />
                </div>
                <div class="col-md-3 mb-2">
                    <label class="form-label">Status</label>
                    <InputSelect class="form-select" @bind-Value="filterStatus" @bind-Value:after="ApplyFilters">
                        <option value="">Alle</option>
                        <option value="Available">Verf√ºgbar</option>
                        <option value="Booked">Gebucht</option>
                        <option value="Maintenance">Wartung</option>
                    </InputSelect>
                </div>
                <div class="col-md-3 mb-2 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="ResetFilters">Filter zur√ºcksetzen</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Ansicht umschalten -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="btn-group" role="group">
                <button class="btn @(viewMode == "list" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetViewMode("list")'>
                    üìã Listenansicht
                </button>
                <button class="btn @(viewMode == "grid" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetViewMode("grid")'>
                    üóÇÔ∏è Rasteransicht
                </button>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Lade Fahrzeuge...</span>
            </div>
            <p class="mt-2">Lade Fahrzeuge...</p>
        </div>
    }
    else if (filteredVehicles == null || filteredVehicles.Count == 0)
    {
        <div class="alert alert-info">
            <strong>Keine Fahrzeuge gefunden</strong>
            <p class="mb-0">Es wurden keine Fahrzeuge gefunden, die den Filterkriterien entsprechen.</p>
        </div>
    }
    else
    {
        @if (viewMode == "list")
        {
            <!-- Listenansicht -->
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Modell</th>
                            <th>Kennzeichen</th>
                            <th>Standort</th>
                            <th>Status</th>
                            <th>Erstellt am</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vehicle in filteredVehicles)
                        {
                            <tr>
                                <td><strong>@vehicle.Model</strong></td>
                                <td>@vehicle.LicensePlate</td>
                                <td>@vehicle.CurrentLocation</td>
                                <td>
                                    @if (vehicle.Status == "Available")
                                    {
                                        <span class="badge bg-success">Verf√ºgbar</span>
                                    }
                                    else if (vehicle.Status == "Booked")
                                    {
                                        <span class="badge bg-warning">Gebucht</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Wartung</span>
                                    }
                                </td>
                                <td>@vehicle.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <!-- Rasteransicht -->
            <div class="row">
                @foreach (var vehicle in filteredVehicles)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                        <div class="card h-100">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0">@vehicle.Model</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><strong>Kennzeichen:</strong><br/>@vehicle.LicensePlate</p>
                                <p class="mb-2"><strong>Standort:</strong><br/>@vehicle.CurrentLocation</p>
                                <p class="mb-0">
                                    <strong>Status:</strong>
                                    @if (vehicle.Status == "Available")
                                    {
                                        <span class="badge bg-success">Verf√ºgbar</span>
                                    }
                                    else if (vehicle.Status == "Booked")
                                    {
                                        <span class="badge bg-warning">Gebucht</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Wartung</span>
                                    }
                                </p>
                            </div>
                            <div class="card-footer text-muted small">
                                Erstellt: @vehicle.CreatedAt.ToString("dd.MM.yyyy")
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        
        <div class="mt-3">
            <p class="text-muted">Angezeigt: <strong>@filteredVehicles.Count</strong> von <strong>@allVehicles.Count</strong> Fahrzeugen</p>
        </div>
    }
</div>

@code {
    private List<Vehicle> allVehicles = new();
    private List<Vehicle> filteredVehicles = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    private string viewMode = "grid";
    
    // Filter
    private string filterLocation = string.Empty;
    private string filterModel = string.Empty;
    private string filterStatus = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadVehicles();
    }

    private async Task LoadVehicles()
    {
        isLoading = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            await Task.Run(() =>
            {
                allVehicles = VehicleService.GetAllVehicles();
            });
            
            ApplyFilters();
        }
        catch (Exception ex)
        {
            errorMessage = $"Fehler beim Laden der Fahrzeuge: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ApplyFilters()
    {
        try
        {
            filteredVehicles = allVehicles.Where(v =>
                (string.IsNullOrEmpty(filterLocation) || v.CurrentLocation.Contains(filterLocation, StringComparison.OrdinalIgnoreCase)) &&
                (string.IsNullOrEmpty(filterModel) || v.Model.Contains(filterModel, StringComparison.OrdinalIgnoreCase)) &&
                (string.IsNullOrEmpty(filterStatus) || v.Status == filterStatus)
            ).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Fehler beim Filtern: {ex.Message}";
            filteredVehicles = new List<Vehicle>();
        }
        
        StateHasChanged();
    }

    private void ResetFilters()
    {
        filterLocation = string.Empty;
        filterModel = string.Empty;
        filterStatus = string.Empty;
        ApplyFilters();
    }

    private void SetViewMode(string mode)
    {
        viewMode = mode;
        StateHasChanged();
    }
}
