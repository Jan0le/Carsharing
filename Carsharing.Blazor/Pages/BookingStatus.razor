@page "/bookingstatus"
@inject IBookingService BookingService
@inject IVehicleService VehicleService
@inject IParticipantService ParticipantService

<PageTitle>Buchungsstatus - Carsharing</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2>üìã Buchungsstatus</h2>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Fehler:</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    <!-- Filter -->
    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0">üîç Filter</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-2">
                    <label class="form-label">Teilnehmer</label>
                    <InputSelect class="form-select" @bind-Value="selectedParticipantId" @bind-Value:after="LoadBookings">
                        <option value="0">Alle Teilnehmer</option>
                        @foreach (var participant in participants)
                        {
                            <option value="@participant.ParticipantId">@participant.FirstName @participant.LastName</option>
                        }
                    </InputSelect>
                </div>
                <div class="col-md-4 mb-2">
                    <label class="form-label">Status</label>
                    <InputSelect class="form-select" @bind-Value="filterStatus" @bind-Value:after="LoadBookings">
                        <option value="">Alle</option>
                        <option value="Pending">Ausstehend</option>
                        <option value="Confirmed">Best√§tigt</option>
                        <option value="Cancelled">Storniert</option>
                    </InputSelect>
                </div>
                <div class="col-md-4 mb-2">
                    <label class="form-label">Zeitraum</label>
                    <InputSelect class="form-select" @bind-Value="timeFilter" @bind-Value:after="LoadBookings">
                        <option value="all">Alle</option>
                        <option value="current">Aktuelle</option>
                        <option value="past">Vergangene</option>
                        <option value="future">Zuk√ºnftige</option>
                    </InputSelect>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Lade Buchungen...</span>
            </div>
            <p class="mt-2">Lade Buchungen...</p>
        </div>
    }
    else if (filteredBookings == null || filteredBookings.Count == 0)
    {
        <div class="alert alert-info">
            <strong>Keine Buchungen gefunden</strong>
            <p class="mb-0">Es wurden keine Buchungen gefunden, die den Filterkriterien entsprechen.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Buchungs-ID</th>
                        <th>Fahrzeug</th>
                        <th>Teilnehmer</th>
                        <th>Startzeit</th>
                        <th>Endzeit</th>
                        <th>Status</th>
                        <th>Erstellt am</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in filteredBookings)
                    {
                        var vehicle = VehicleService.GetVehicle(booking.VehicleId);
                        var participant = ParticipantService.GetParticipant(booking.ParticipantId);
                        
                        <tr>
                            <td><strong>#@booking.BookingId</strong></td>
                            <td>
                                @if (vehicle != null)
                                {
                                    <span>@vehicle.Model<br/><small class="text-muted">@vehicle.LicensePlate</small></span>
                                }
                                else
                                {
                                    <span class="text-muted">Fahrzeug #@booking.VehicleId</span>
                                }
                            </td>
                            <td>
                                @if (participant != null)
                                {
                                    <span>@participant.FirstName @participant.LastName<br/><small class="text-muted">@participant.Email</small></span>
                                }
                                else
                                {
                                    <span class="text-muted">Teilnehmer #@booking.ParticipantId</span>
                                }
                            </td>
                            <td>@booking.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@booking.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (booking.BookingStatus == "Confirmed")
                                {
                                    <span class="badge bg-success">Best√§tigt</span>
                                }
                                else if (booking.BookingStatus == "Pending")
                                {
                                    <span class="badge bg-warning">Ausstehend</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@booking.BookingStatus</span>
                                }
                            </td>
                            <td>@booking.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <p class="text-muted">Angezeigt: <strong>@filteredBookings.Count</strong> Buchungen</p>
        </div>
    }
</div>

@code {
    private List<Booking> allBookings = new();
    private List<Booking> filteredBookings = new();
    private List<Participant> participants = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    
    private int selectedParticipantId = 0;
    private string filterStatus = string.Empty;
    private string timeFilter = "all";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            await Task.Run(() =>
            {
                participants = ParticipantService.GetAllParticipants();
                allBookings = BookingService.GetAllBookings();
            });
            
            LoadBookings();
        }
        catch (Exception ex)
        {
            errorMessage = $"Fehler beim Laden der Buchungen: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void LoadBookings()
    {
        filteredBookings = allBookings.Where(b =>
            (selectedParticipantId == 0 || b.ParticipantId == selectedParticipantId) &&
            (string.IsNullOrEmpty(filterStatus) || b.BookingStatus == filterStatus) &&
            (timeFilter == "all" || 
             (timeFilter == "current" && b.StartTime <= DateTime.Now && b.EndTime >= DateTime.Now) ||
             (timeFilter == "past" && b.EndTime < DateTime.Now) ||
             (timeFilter == "future" && b.StartTime > DateTime.Now))
        ).OrderByDescending(b => b.CreatedAt).ToList();
        
        StateHasChanged();
    }
}

